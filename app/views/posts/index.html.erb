<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post.each do |p| %>
      <tr>
        <td><%= p.title %></td>
        <td><%= p.body %></td>
       <td>
  <button><%= link_to 'Show', p %></button>
</td>
<td>
  <button><%= link_to 'Edit', edit_post_path(p) %></button>
</td>
<td>
  <%= button_to 'Destroy', post_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>
</td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_post_path %>
